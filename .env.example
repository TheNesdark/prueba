# Configuración de Orthanc
# URL base de la API de Orthanc
ORTHANC_URL=http://localhost:8042

# Credenciales de Orthanc
ORTHANC_USERNAME=orthanc
ORTHANC_PASSWORD=orthanc

# Configuración de autenticación JWT
# Secreto para firmar tokens JWT (mínimo 32 caracteres)
JWT_SECRET=tu-secreto-jwt-muy-largo-y-seguro-de-al-menos-32-caracteres

# Credenciales de administrador (opcionales)
# Si no se definen, se usan los valores por defecto: admin / admin123
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Entorno de producción
# Establecer a 'true' o '1' para habilitar cookies seguras (HTTPS)
PROD=false
