---
import { createToken } from '@/libs/auth/auth';

const error = Astro.url.searchParams.get('error');

if (Astro.request.method === 'POST') {
  try {
    const data = await Astro.request.formData();
    const username = data.get('username');
    const password = data.get('password');

    const ADMIN_USERNAME = import.meta.env.ADMIN_USERNAME || 'admin';
    const ADMIN_PASSWORD = import.meta.env.ADMIN_PASSWORD || 'admin123';

    if (username === ADMIN_USERNAME && password === ADMIN_PASSWORD) {
      // Crear token JWT
      const token = await createToken({ username });

      // Establecer cookie con el JWT
      Astro.cookies.set('auth_token', token, {
        path: '/',
        httpOnly: true,
        secure: import.meta.env.PROD,
        sameSite: 'strict',
        maxAge: 60 * 60 * 24 // 24 horas
      });

      return Astro.redirect('/');
    } else {
      return Astro.redirect('/login?error=1');
    }
  } catch (e) {
    console.error(e);
  }
}

if (Astro.cookies.get('auth_token')) {
  return Astro.redirect('/');
}
