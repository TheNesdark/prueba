{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    "module": "ESNext", // <--- Añade esta línea
    "moduleResolution": "node", // <--- También es recomendable añadir esta
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@layouts/*": [
        "./src/layouts/*"
      ],
      "@/styles/*": [
        "./src/styles/*"
      ],
      "@config/*": [
        "./src/config/*"
      ]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  }
}