---
const { study } = Astro.props;
---

<a href={`/viewer?study=${study.id}`} class="study-item">
  <div class="study-header">
    <span class="modality-badge">{study.studyType}</span>
  </div>
  <div class="study-info">
    <p>ID: <strong>{study.id}</strong></p>
    <p>Paciente: <strong>{study.patientName}</strong></p>
    <p>Fecha: <strong>{study.studyDate}</strong></p>
  </div>
</a>

<style>
  :root {
    --bg-panel: #181b21;
    --bg-hover: #232730;
    --accent-color: #3b82f6;
    --text-main: #e2e8f0;
    --text-muted: #94a3b8;
    --border-color: #2d3748;
  }

  .study-item {
    display: block;
    padding: 20px;
    border: 1px solid var(--border-color);
    border-radius: 12px;
    margin-bottom: 16px;
    background-color: var(--bg-panel);
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    text-decoration: none;
    color: var(--text-main);
    transition: all 0.2s ease;
  }

  .study-item:hover {
    transform: translateY(-2px);
    border-color: var(--accent-color);
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.2);
  }

  .study-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 12px;
  }

  .study-item h4 {
    margin: 0;
    color: var(--text-main);
    font-size: 16px;
    font-weight: 600;
  }

  .modality-badge {
    background: rgba(59, 130, 246, 0.15);
    color: var(--accent-color);
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 12px;
    font-weight: 600;
    border: 1px solid rgba(59, 130, 246, 0.3);
  }

  .study-info p {
    margin: 6px 0;
    color: var(--text-muted);
    font-size: 14px;
  }

  .study-info strong {
    color: var(--text-main);
    font-weight: 500;
  }
</style>
